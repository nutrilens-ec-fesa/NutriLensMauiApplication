<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutriLens.Views.MobileCameraPage"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             Title="MobileCameraPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <cv:CameraView x:Name="cameraView" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" CamerasLoaded="cameraView_CamerasLoaded"></cv:CameraView>
            <StackLayout Padding="10" BackgroundColor="DodgerBlue" IsVisible="{Binding TakenPictureVisible}">
                <Image x:Name="takenPicture" Source="{Binding TakenPictureSource}" Aspect="AspectFill"></Image>
            </StackLayout>
        </StackLayout>
        <StackLayout Grid.Row="1">
            <Button Text="Capturar" Command="{Binding TakePictureCommand}"></Button>
        </StackLayout>
    </Grid>
</ContentPage>