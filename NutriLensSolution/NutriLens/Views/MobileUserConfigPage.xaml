<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutriLens.Views.MobileUserConfigPage"
             xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:c="clr-namespace:NutriLens.Entities.Converters"
             Title="Configurações">
    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing" />
        <xct:EventToCommandBehavior Command="{Binding DisappearingCommand}" EventName="Disappearing" />
    </ContentPage.Behaviors>
    <ContentPage.Resources>
        <ResourceDictionary>
            <c:SelectedIndexChangedEventArgsConverter x:Key="selectedIndexChangedEventArgsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Padding="10,20,10,20" Spacing="5">
            <!--<Label Margin="5,0,0,0" Text="Nome"/>
            <Entry Keyboard="Text" Placeholder="Digite seu nome..." Text="{Binding UserInfo.Name}" />-->
            <Label Margin="5,0,0,0" Text="Sexo:" FontAttributes="Bold"/>
            <Picker ItemsSource="{Binding GenderOptions}" SelectedIndex="{Binding GenderIndex}" BackgroundColor="Azure" TextColor="{Binding GenderColorValidation}">
                <Picker.Behaviors>
                    <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding CaloricSuggestChangedCommand}" EventArgsConverter="{StaticResource selectedIndexChangedEventArgsConverter}"></xct:EventToCommandBehavior>
                </Picker.Behaviors>
            </Picker>
            <Label Margin="5,0,0,0" Text="Data de nascimento:" FontAttributes="Bold"/>
            <DatePicker Date="{Binding UserInfo.BornDate}" BackgroundColor="Azure" TextColor="{Binding BornColorValidation}">
                <DatePicker.Behaviors>
                    <xct:EventToCommandBehavior EventName="DateSelected" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </DatePicker.Behaviors>
            </DatePicker>

            <Label Margin="5,0,0,0" Text="Massa (kg):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite seu peso..." Text="{Binding WeightEntry}" BackgroundColor="Azure" TextColor="{Binding WeightColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>
            <Label Margin="5,0,0,0" Text="Altura (m):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite sua altura..." Text="{Binding HeightEntry}" BackgroundColor="Azure" TextColor="{Binding HeightColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>
            <Label Margin="5,0,0,0" Text="Nível de atividade física:" FontAttributes="Bold"/>
            <Picker ItemsSource="{Binding HabitualPhysicalActivityOptions}" SelectedIndex="{Binding HabitualPhysicalActivityIndex}" BackgroundColor="Azure" TextColor="{Binding PhysicalActivityColorValidation}">
                <Picker.Behaviors>
                    <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding CaloricSuggestChangedCommand}" EventArgsConverter="{StaticResource selectedIndexChangedEventArgsConverter}"></xct:EventToCommandBehavior>
                </Picker.Behaviors>
            </Picker>
            <Label Margin="5,0,0,0" Text="Unidade de energia" FontAttributes="Bold" IsVisible="false"/>
            <Grid IsVisible="false">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Row="0" Grid.Column="0" Content="kcal (quilocalorias)" IsChecked="{Binding KcalEnabled}"></RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="1" Content="kJ (quilojoules)" IsChecked="{Binding KJEnabled}"></RadioButton>
            </Grid>
            <Label Margin="5,0,0,0" Text="Objetivo desejado:" FontAttributes="Bold"/>
            <Picker ItemsSource="{Binding DailyKiloCaloriesObjectiveOptions}" SelectedIndex="{Binding DailyKiloCaloriesObjectiveIndex}" BackgroundColor="Azure" TextColor="{Binding DailyKiloCaloriesObjectiveColorValidation}">
                <Picker.Behaviors>
                    <xct:EventToCommandBehavior EventName="SelectedIndexChanged" Command="{Binding CaloricSuggestChangedCommand}" EventArgsConverter="{StaticResource selectedIndexChangedEventArgsConverter}"></xct:EventToCommandBehavior>
                </Picker.Behaviors>
            </Picker>

            <Label Margin="5,0,0,0" Text="Gasto energético basal: " IsVisible="false"/>
            <Label Margin="5,0,0,0" Text="{Binding BasalDailyCalories}" IsVisible="false"/>
            <Label Margin="5,0,0,0" Text="Gasto energético diário: " IsVisible="false"/>
            <Label Margin="5,0,0,0" Text="{Binding DailyKiloCaloriesBurn}" IsVisible="false"/>
            <Label Margin="5,0,0,0" Text="Consumo diário de calorias sugerido: " FontAttributes="Bold"/>
            <Label Text="{Binding DailyKiloCaloriesGoal}" FontSize="Medium"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding UserInfo.UseSuggestedCaloricGoalEntry}"></CheckBox>
                    <Label Text="Utilizar meta diaria de calorias sugerido" VerticalOptions="Center" />
                </StackLayout>
            </Grid>
            <Label Margin="5,0,0,0" Text="Meta diária de consumo de calorias:" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite sua meta diária de consumo..." Text="{Binding UserInfo.KiloCaloriesDiaryObjective}" BackgroundColor="Azure" TextColor="{Binding KiloCaloriesDiaryObjectiveColorValidation}" FontSize="Medium">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de carboidratos (g):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de carboidratos..." Text="{Binding CarbohydrateGoalEntry}" BackgroundColor="Azure" TextColor="{Binding CarbohydrateGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de proteínas (g):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de proteínas..." Text="{Binding ProteinGoalEntry}" BackgroundColor="Azure" TextColor="{Binding ProteinGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de gorduras (g):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de gorduras..." Text="{Binding FatGoalEntry}" BackgroundColor="Azure" TextColor="{Binding FatGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de fibras (g):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de fibras..." Text="{Binding FiberGoalEntry}" BackgroundColor="Azure" TextColor="{Binding FiberGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de sódio (mg):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de sódio..." Text="{Binding SodiumGoalEntry}" BackgroundColor="Azure" TextColor="{Binding SodiumGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de colesterol (mg):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de sódio..." Text="{Binding CholesterolGoalEntry}" BackgroundColor="Azure" TextColor="{Binding CholesterolGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de cálcio (mg):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de sódio..." Text="{Binding CalciumGoalEntry}" BackgroundColor="Azure" TextColor="{Binding CalciumGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,0,0,0" Text="Customizar meta diária de ferro (mg):" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Placeholder="Digite a meta diária de sódio..." Text="{Binding IronGoalEntry}" BackgroundColor="Azure" TextColor="{Binding IronGoalColorValidation}">
                <Entry.Behaviors>
                    <xct:EventToCommandBehavior EventName="TextChanged" Command="{Binding CaloricSuggestChangedCommand}"></xct:EventToCommandBehavior>
                </Entry.Behaviors>
            </Entry>

            <Label Margin="5,30,0,0" Text="Doenças crônicas não transmissíveis (DCNT)" FontAttributes="Bold"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding UserInfo.Hipertension}"></CheckBox>
                    <Label Text="Hipertensão" VerticalOptions="Center" />
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding UserInfo.Diabetes}"></CheckBox>
                    <Label Text="Diabetes" VerticalOptions="Center" />
                </StackLayout>
            </Grid>
            <Label Margin="5,0,0,0" Text="Restrições alimentares" FontAttributes="Bold"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding UserInfo.LactoseIntolerant}"></CheckBox>
                    <Label Text="Intolerante a lactose" VerticalOptions="Center" />
                </StackLayout>
                <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding UserInfo.GlutenIntolerant}"></CheckBox>
                    <Label Text="Intolerante a glúten" VerticalOptions="Center" />
                </StackLayout>
            </Grid>
            <Button Margin="0,30,0,0" Text="Salvar informações" Command="{Binding SaveConfigsCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>