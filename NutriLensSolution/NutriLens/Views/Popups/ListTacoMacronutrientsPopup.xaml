<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NutriLens.Views.Popups.ListTacoMacronutrientsPopup"
             Color="Transparent">
    <StackLayout BackgroundColor="Azure" 
        Padding="20"
        VerticalOptions="FillAndExpand">
        <Label FontAttributes="Bold" Text="Detalhes do alimento:"></Label>
        <Label Text="{Binding Items}"></Label>
        <Button Grid.Row="2" x:Name="btnConfirmEntry" Text="OK" Clicked="btnConfirmEntry_Clicked"></Button>
    </StackLayout>
</toolkit:Popup>
