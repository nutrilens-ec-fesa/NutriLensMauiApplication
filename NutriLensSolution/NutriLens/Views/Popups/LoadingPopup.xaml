<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NutriLens.Views.Popups.LoadingPopup"
             Color="#00000000">
    <Frame BackgroundColor="#2B2B2B" 
       Padding="20"
       HasShadow="True"
       CornerRadius="10">
        <Frame.Content>
            <Grid BackgroundColor="#2B2B2B" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"></RowDefinition>
                    <RowDefinition Height="50*"></RowDefinition>
                </Grid.RowDefinitions>

                <ActivityIndicator Grid.Row="0" x:Name="actIndicator" Color="Aqua" IsRunning="True"></ActivityIndicator>
                <Label Grid.Row="1" x:Name="lblMessage" HorizontalTextAlignment="Center" TextColor="White"></Label>
            </Grid>
        </Frame.Content>
    </Frame>
</toolkit:Popup>
